.new_company_form
  %h2　企業の新規登録
  .cancel_form
    %h3 企業登録が不要な方は、こちらからhome画面へ
    = link_to "home画面に戻る", class: "btn btn-default"

  = form_for @company do |f|
    .col-md-6
      = f.label :name
      = f.text_field :name, class: "form-control"
    .col-md-6
      = f.label :company_tel
      = f.text_field :company_tel, class: "form-control"

    .col-md-6
      = f.label :company_email
      = f.text_field :company_email, class: "form-control"

    .col-md-12
      = f.label :region_id
      = f.collection_select :region_id, (Region.all, :id, :name),{}, class: "form-control"

    .col-md-12
      = f.label :prefecture_id
      = f.text_field :prefecture_id, class: "form-control"
    .col-md-6
      = f.label :address1
      = f.text_field :address1, class: "form-control"
    .col-md-6
      = f.label :address2
      = f.text_field :address2, class: "form-control"

    .col-md-12
      = f.submit "企業登録する", class: "btn btn-primary"
