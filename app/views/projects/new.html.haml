.container
  .new_project_form
    %h2 新規プロジェクト登録
    .col-md-12
      = form_for @project do |f|
        = f.label :name
        = f.text_field :name, class: "form-control"
        = f.label :description
        = f.text_area :description, class: "form-control"
        = f.hidden_field :company_id, :value => current_user.company_id
        .actions
          = f.submit "登録", class: "btn btn-primary"
