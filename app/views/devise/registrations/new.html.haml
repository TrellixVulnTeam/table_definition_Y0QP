%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .col-md-12
    %h3.user_form ユーザー情報※必須
    .col-md-6
      .field
        = f.label :name
        = f.text_field :name, class: 'form-control'
    .col-md-6
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, class: 'form-control'
  .col-md-12
    -if current_user.present? && current_user.admin?
      .col-md-6
        = f.label :status
        = f.select :status, options_for_select([["admin", 1],["user", 2],["reader", 3]]),{}, {class: "form-control"}
        = f.hidden_field :company_id, :value => current_user.company_id
  .col-md-12
    .col-md-6
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: "off", class: 'form-control'
    .col-md-6
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
        -unless signed_in?
          = f.hidden_field :status, :value => 1

  -unless signed_in?
    .col-md-12
      %h3.compnay_form 会社情報はこちらから
      .accordion.company_form
        = f.fields_for :company do |company|
          .col-md-6
            = company.label :name
            = company.text_field :name, class: 'form-control'
          .col-md-6
            = company.label :email
            = company.email_field :email, class: 'form-control'
          .col-md-6
            = company.label :company_tel
            = company.text_field :company_tel, class: 'form-control'
          .col-md-6
            = company.label :address
            = company.text_field :address, class: 'form-control'
  .actions
    %br
    = f.submit "Sign up", class: 'btn btn-primary'

%h3 登録をしている方はこちらから
= render "devise/shared/links"
